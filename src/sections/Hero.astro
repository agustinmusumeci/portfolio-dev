---
import { getEntry } from "astro:content";
import Navigation from "../components/Navigation.astro";

const about = await getEntry("about","data");
---
<section class="container h-[92.5dvh] grid place-content-center">
    <h1 class="title-xl">
        {about.data.title}
    </h1>
    <Navigation>
        {about.data.refs.map((el) => (
            (el.title != "Phone" && el.title != "Email") && 
            <li class="icon-hover"><a href={el.href} target="_blank" class="text-2xl"><i class={el.icon}></i></a></li>
        ))}
    </Navigation>
</section>